unit RegiaoModel;

interface

type
  TRegiao = class
  public
    FId: Integer;
    FRegiao: string;

    // Coloque todos os Métodos daqui para baixo (Sem passar do end;)
    // Aqui fica a declaração. Após implementation coloque TRegistroExercicio. antes do nome do método

    constructor Create(AId: Integer; const ARegiao: string);
    function SqlTodasRegioes(): string;

end;

implementation

constructor TRegiao.Create(AId: Integer; const ARegiao: string);
begin
  FId := AId;
  FRegiao := ARegiao;
end;

function TRegiao.SqlTodasRegioes(): string;
begin
  Result := 'SELECT * FROM Regiao';
end;

end.
