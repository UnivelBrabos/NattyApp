unit UsuarioModel;

interface

Type
  TUsuario = class
            public
               UserName : string;
               Email : string;
               Senha : string;
               Peso : double;

               constructor CreateUser(const nome:string;
                                      const email:string;
                                      const senha:string;
                                      Peso: double);

            end;

implementation

  constructor TUsuario.CreateUser(const nome:string;
                                  const email:string;
                                  const senha:string;
                                  Peso: double);
  begin
    UserName := nome;
    Email := email;

  end;

end.
