unit Main;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants,
  FMX.Types, FMX.Controls, FMX.Forms, FMX.Graphics, FMX.Dialogs, FMX.Edit,
  FMX.StdCtrls, FMX.Controls.Presentation, UsuarioModel, PerfilController, PerfilView;

type
  TForm1 = class(TForm)
    btnEntrar: TButton;
    lblUsuario: TLabel;
    edtUsuario: TEdit;
    lblSenha: TLabel;
    edtSenha: TEdit;
    procedure btnEntrarClick(Sender: TObject);
    procedure FormCreate(Sender: TObject); // agora o Delphi reconhece
  private
    { Private declarations }
  public
    PerfilControlador: TFrame4;
  end;


var
  Form1: TForm1;
  Usuario: TUsuario;

implementation

{$R *.fmx}

procedure TForm1.btnEntrarClick(Sender: TObject);
var
  Perfil: TForm4;
begin
    Usuario := PerfilControlador.UsuarioExiste(edtUsuario.Text, edtSenha.Text);

    if Usuario.FNome <> '' then
    begin
      Perfil := TForm4.
    end
    else
    begin

    end;

end;

procedure TForm1.FormCreate(Sender: TObject);
begin
  PerfilControlador := TFrame4.Create(self);
end;

end.
